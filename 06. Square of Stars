using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Nachaloto

{
    class Nachaloto
    {
        static void Main()
        {
            var num1 = int.Parse(Console.ReadLine());

            Console.WriteLine(new string('*',num1));
            for (int i = 1; i <=num1-2; i++)
            {
                Console.WriteLine($"*{new string(' ',num1 - 2)}*");
            }
            Console.WriteLine(new string('*',num1));
        }
    }
}
